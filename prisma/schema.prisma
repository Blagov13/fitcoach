generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  trainer
  client
  admin
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         Role     @default(client)
  tz           String   @default("UTC")
  passwordHash String?
  createdAt    DateTime @default(now())
}
